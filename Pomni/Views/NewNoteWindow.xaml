<Window x:Class="Pomni.Views.NewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Pomni.ViewModels"
        xmlns:local="clr-namespace:Pomni.Views"
        mc:Ignorable="d"
        Title="NewNote" Height="450" Width="400"
        MinHeight="250" MinWidth="400"
        WindowStartupLocation="CenterScreen" Cursor="">
    <Window.DataContext>
        <vm:NewNoteViewModel />
    </Window.DataContext>

    <Window.Resources>
       
    </Window.Resources>

    <Grid Cursor="">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!--Note Title Box-->
        <TextBox x:Name="NoteTitleTextBox"
                 Grid.Row="0"
                 Tag="New Title..."
                 Style="{StaticResource PlaceholderTextBox}"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Padding="35 10"/>

        <!--Note Content Box-->
        <TextBox x:Name="NoteContentTextBox"
                 Grid.Row="1"
                 Tag="Content..."
                 Style="{StaticResource PlaceholderTextBox}"
                 Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16"
                 Padding="35 10"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Cursor="IBeam"/>
        
        <!--Note Reminder Box-->
        <Grid Grid.Row="2" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--Note DateTime Box-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!--DatePicker Box-->
                <DatePicker Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            DisplayDateStart="{x:Static system:DateTime.Today}"
                            xmlns:system="clr-namespace:System;assembly=mscorlib"
                            SelectedDate="{Binding ReminderDate, Mode=TwoWay}"/>

                <!--TimePicker Box-->
                <StackPanel Margin="0 0 5 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Grid.Column="1">
                    <Label  Content="Time: " />
                    <Grid Width="50">
                        <TextBox x:Name="TimeTextBox"
                                 TextAlignment="Left"
                                 MaxLength="5"
                                 Text="{Binding ReminderTime, Mode=TwoWay}"
                                 Padding="5 5 0 0"
                                 ToolTip="HH:MM"/>
                        <Label Content="HH:MM"
                               IsHitTestVisible="False"
                               Foreground="{StaticResource Borders}"
                               Visibility="{Binding Text.IsEmpty, ElementName=TimeTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               />
                    </Grid>
                    
                </StackPanel>
            </Grid>

            <Button Grid.Row="1"
                    Style="{StaticResource RoundAccentButton}"
                    Content="Create"
                    Width="90"
                    Height="30"
                    HorizontalAlignment="Right"
                    Margin="0 0 5 0"
                    Command="{Binding ICreateNote}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
