<Window x:Class="Pomni.Views.NewNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Pomni.ViewModels"
        xmlns:local="clr-namespace:Pomni.Views"
        mc:Ignorable="d"
        Title="NewNote" Height="450" Width="400"
        MinHeight="250" MinWidth="400"
        WindowStartupLocation="CenterScreen" Cursor="">
    <Window.DataContext>
        <vm:NewNoteViewModel />
    </Window.DataContext>
    
    <Grid Cursor="">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!--Note Title Box-->
        <TextBox x:Name="NoteTitleTextBox"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource NewNoteTitleTextBox}" />

        <Label IsHitTestVisible="False"
               Content="New Title..."
               VerticalAlignment="Center"
               Margin="35 0"
               FontSize="16"
               Foreground="{StaticResource Borders}"
               Visibility="{Binding Text.IsEmpty, ElementName=NoteTitleTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!--Note Content Box-->
        <TextBox x:Name="NoteContentTextBox"
                 Grid.Row="1"
                 Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource NewNoteContentTextBox}" Cursor="IBeam" />

        <Label IsHitTestVisible="False"
               Grid.Row="1"
               Content="Content..."
               Margin="35 10"
               FontSize="16"
               Foreground="{StaticResource Borders}"
               Visibility="{Binding Text.IsEmpty, ElementName=NoteContentTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/> 
        
        <!--Note Reminder Box-->
        <Grid Grid.Row="2" Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--Note DateTime Box-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!--DatePicker Box-->
                <DatePicker Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            SelectedDate="{Binding ReminderDate, Mode=TwoWay}"/>

                <!--TimePicker Box-->
                <StackPanel Margin="0 0 5 0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Grid.Column="1">
                    <Label  Content="Time: " />
                    <ComboBox Width="30"  />
                    <Label Content=":" />
                    <ComboBox Width="30"  />
                </StackPanel>
            </Grid>

            <Button Grid.Row="1"
                    Style="{StaticResource RoundAccentButton}"
                    Content="Create"
                    Width="90"
                    Height="30"
                    HorizontalAlignment="Right"
                    Margin="0 0 5 0"
                    Command="{Binding ICreateNote}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
